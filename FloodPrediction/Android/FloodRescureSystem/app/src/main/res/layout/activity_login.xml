<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/rect_gray"
            android:orientation="horizontal"
            android:padding="10dp">


            <EditText
                android:id="@+id/loginUsernameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#00000000"
                android:hint="Username"
                android:padding="8dp"
                android:maxLines="1"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#797979" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:padding="10dp"
            android:background="@drawable/rect_gray">


            <EditText
                android:id="@+id/loginPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:padding="8dp"
                android:textColorHint="#797979"
                android:textColor="#000000"
                android:maxLines="1"
                android:inputType="text"
                android:singleLine="true"
                android:background="#00000000"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <CheckBox
                android:id="@+id/loginRemenberCheckBox"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:buttonTint="@color/colorPrimaryDark"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember me"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:textColor="#4a4a4a"/>

            <TextView
                android:id="@+id/loginForgotPasswordEditText"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot password?"
                android:textColor="#ecb33f"
                android:layout_marginRight="5dp"
                android:layout_marginTop="8dp"
                android:textSize="15sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="LOGIN"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="2dp"
            android:padding="15dp"
            android:textAllCaps="false"
            android:textColor="@color/white_color"
            android:gravity="center_horizontal"
            android:background="@drawable/rect_button"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/loginSignUpTextLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20sp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don&apos;t have an account?"
            android:textSize="15sp"
            android:textColor="#4a4a4a"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="SignUp"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>

</LinearLayout>

