<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp"
        tools:context=".RescueRequestActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_color"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:text="Who are you"/>

        <EditText
            android:id="@+id/locationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:textColor="@color/txt_color"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:background="@drawable/rect_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_color"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:text="What is your emergency"/>

        <EditText
            android:id="@+id/emergencyEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:textColor="@color/txt_color"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:background="@drawable/rect_gray"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_color"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:text="What is your need in next 24 hrs"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/needs_aid_CB1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="First Aid"/>

            <CheckBox
                android:id="@+id/needs_food_CB2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Food"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <CheckBox
                android:id="@+id/needs_water_CB3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Water"/>

            <CheckBox
                android:id="@+id/needs_clothing_CB4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clothing"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_color"
            android:layout_marginTop="8dp"
            android:text="Hazards Around you"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/hazards_electrical_CB1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Electrical"/>

            <CheckBox
                android:id="@+id/hazards_trees_CB2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Falling Trees"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <CheckBox
                android:id="@+id/hazards_road_CB3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Road Blocked"/>

            <CheckBox
                android:id="@+id/hazards_others_CB4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="others"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.2"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="@color/txt_color"
                android:text="How many people"/>

            <EditText
                android:id="@+id/pplCountEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_gray"
                android:textSize="18sp"
                android:text="0"
                android:maxLength="2"
                android:maxLines="1"
                android:inputType="number"
                android:singleLine="true"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textAlignment="center"
                android:textColor="@color/txt_color"
                android:layout_weight="0.8"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.2"
                android:textColor="@color/txt_color"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:text="How many pets"/>

            <EditText
                android:id="@+id/petsCountEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_color"
                android:background="@drawable/rect_gray"
                android:textSize="18sp"
                android:text="0"
                android:maxLength="2"
                android:maxLines="1"
                android:inputType="number"
                android:singleLine="true"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textAlignment="center"
                android:layout_weight="0.8"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.2"
                android:textColor="@color/txt_color"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:text="Disabled People"/>

            <EditText
                android:id="@+id/disabledEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_color"
                android:background="@drawable/rect_gray"
                android:textSize="18sp"
                android:text="0"
                android:maxLength="2"
                android:maxLines="1"
                android:inputType="number"
                android:singleLine="true"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textAlignment="center"
                android:layout_weight="0.8"/>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_color"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:text="Message"/>

        <EditText
            android:id="@+id/messageEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:minHeight="100dp"
            android:textColor="@color/txt_color"
            android:layout_marginTop="8dp"
            android:background="@drawable/rect_gray" />

        <Button
            android:id="@+id/requestButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Send Request"
            android:background="@drawable/rect_button"
            android:textColor="@color/white_color"
            android:textAllCaps="false"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"/>

    </LinearLayout>

    </LinearLayout>

</ScrollView>